<%- include('header') -%>
<%- include('navbar') -%>

<div class="container">
    <div class="row">
        <div class="col-12">
            <h2>Platform
                <% if (typeof platforms === 'undefined') { %>
                    Create
                <% }else{ %>
                    Edit
                <% } %>
            </h2>
            <form method="post">
                <div class="form-group">
                    <label for="platformName">Platform Name:</label>
                    <input value="<%= (typeof platforms === 'undefined') ? '' : platforms.PlatformName %>" type="text" class="form-control" id="platformName" name="platformName" required>
                </div>

                <div class="form-group">
                    <label for="manufacturer">Manufacturer:</label>
                    <input value="<%= (typeof platforms === 'undefined') ? '' : platforms.manufacturer %>" type="text" class="form-control" id="manufacturer" name="manufacturer" required>
                </div>

                <div class="form-group">
                    <label for="controllerCount">No. of Controllers:</label>
                    <input value="<%= (typeof platforms === 'undefined') ? '' : platforms.controllerCount  %>" type="number" class="form-control" id="controllerCount" name="controllerCount" required>
                </div>

                <div class="form-group">
                    <label for="manufactureDate">Manufacture Date:</label>
                    <input value="<%= (typeof platforms === 'undefined') ? '' : platforms.manufactureDate %>" type="date" class="form-control" id="manufactureDate" name="manufactureDate" required>
                </div>

                <input type="submit" class="btn btn-primary" value="Save"/>
                <a class="btn btn-link" href="/">cancel</a>
            </form>
        </div>
    </div>
</div>
<%- include('footer') -%>