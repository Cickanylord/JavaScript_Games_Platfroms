<%- include('header') -%>
<%- include('navbar') -%>

<div class="container">
  <div class="row">
    <div class="col-12">
      <h2>Game List</h2>
      <table class="table table-striped table-bordered">
        <tr>
          <th>Title</th>
          <th>PlatformID</th>
          <th>Platform</th>
          <th>Developer</th>
          <th>DLC</th>
          <th>Release Date</th>
          <th>Actions</th>


        </tr>
        <% games.forEach(function(game){ %>
        <tr>
            <td><%= game.Title %></td>
            <td><%= game._Platform._id %></td>
            <td><%= game._Platform.Platform_Name %></td>
            <td><%= game.Developer %></td>
            <td><%= game.DLC %></td>
            <td><%= game.Release_Date %></td>

            <td style="width:30px;white-space: nowrap">
            <a href="/games/edit/<%= game._id %>" class="btn btn-sm btn-primary"><i class="far fa-edit"></i></a>
            <a href="/games/delete/<%= game._id %>" class="btn btn-sm btn-danger"><i class="far fa-trash-alt"></i></a>
            </td>
        </tr>
        <% }); %>
      </table>
      <br/>
      <a href="/games/new" class="btn btn-block btn-primary">Add New Game</a>
    </div>
  </div>
</div>

<%- include('footer') -%>