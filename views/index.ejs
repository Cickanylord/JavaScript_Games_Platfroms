<%- include('header') -%>
<%- include('navbar') -%>


<div class="container">
    <div class="row">
        <div class="col-12">
            <h2>Platform List</h2>
            <table class="table table-striped table-bordered">
                <tr>
                    <th>Platform Name</th>
                    <th>Platform ID</th>
                    <th>Manufacturer</th>
                    <th>Manufacture Date</th>
                    <th>No. of Controllers</th>
                    <th>Actions</th>
                </tr>


                <% platforms.forEach(function(platform){ %>
                <tr>
                    <td><%= platform.PlatformName %></td>
                    <td><%= platform._id %></td>
                    <td><%= platform.manufacturer %></td>
                    <td><%= platform.manufactureDate %></td>
                    <td><%= platform.controllerCount %></td>
                    <td style="width:30px;white-space: nowrap">
                        <a href="/platform/games/<%= platform._id %>" class="btn btn-sm btn-success">Games</a>
                        <a href="/platforms/edit/<%= platform._id %>" class="btn btn-sm btn-primary"><i class="far fa-edit"></i></a>
                        <a href="/platforms/delete/<%= platform._id %>" class="btn btn-sm btn-danger"><i class="far fa-trash-alt"></i></a>
                    </td>
                </tr>
                <% }); %>
            </table>
            <br/>
            <a href="/platforms/new" class="btn btn-block btn-primary">Add New Platform</a>
        </div>
    </div>
</div>

<%- include('footer') -%>